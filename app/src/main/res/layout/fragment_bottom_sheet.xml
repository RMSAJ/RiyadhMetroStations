<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".favorite.ui.BottomSheetFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/favoriteCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/favorite_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#786E6E" />

        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/favorite"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="42dp"

             />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/secondCard"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favoriteCard">

    <!-- Bottom sheet contents. -->
<ImageView
    android:id="@+id/navigate_image"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="32dp"
    android:src="@drawable/ic_places"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/favorite_text"
    app:tint="#786E6E"/>
 <TextView
        android:id="@+id/navigate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Navigate"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="42dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/navigate_image"
        app:layout_constraintStart_toEndOf="@id/navigate_image"
        app:layout_constraintTop_toTopOf="@id/navigate_image"/>
    </com.google.android.material.card.MaterialCardView>

